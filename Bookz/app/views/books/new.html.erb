<h1>Add A Book to the Library</h1>

<!-- all the classes and the extra divs are only for bootstrap formatting -->
<!-- they have nothing to do with rails -->

<div style='width: 400px'>
<!-- because bootstrap makes inputs width:100% so if... -->
<!-- you don't put them in a div with a fixed width they... -->
<!-- span the whole page -->

  <%= form_for @book do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
   

      <%= f.label :genre %>
      <%= f.text_field :genre, class: 'form-control' %>


      <%= f.label :year_published %>
      <%= f.number_field :year_published, class: 'form-control' %>



      <%= f.label :author_id %>
      <%= f.number_field :author_id, class: 'form-control' %>
 

    <%= f.submit 'Slide it on the shelf!', class: 'btn btn-warning' %>
  <% end %>
</div>